<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MilionsOfSong">
    <androidx.cardview.widget.CardView
        android:id="@+id/myCartView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="50dp">
        <ImageView
            android:id="@+id/roundImage"
            android:layout_width="match_parent"
            android:src="@drawable/ic_arijit"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/caerdShaan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@id/myCartView"
        app:cardCornerRadius="50dp">
        <ImageView
            android:src="@drawable/ic_shaan"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/caerdSinger"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@id/caerdShaan"
        app:cardCornerRadius="50dp">
        <ImageView
            android:src="@drawable/ic_singer"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/caerdneha"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/caerdSinger"
        app:cardCornerRadius="50dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_neha" />


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/caerdshresghosle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/caerdneha"
        android:layout_below="@id/caerdShankar"
        app:cardCornerRadius="50dp">
        <ImageView
            android:src="@drawable/ic_shreyasghosle"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/caerdShankar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@id/caerdneha"
        android:layout_below="@id/caerdShaan"
        app:cardCornerRadius="50dp">

        <ImageView
            android:src="@drawable/ic_shankar"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/caer"
        android:layout_below="@id/myCartView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        app:cardCornerRadius="50dp">

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_shreys" />
    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/iconSpotify"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/caerdneha"
        android:layout_marginStart="170dp"
        android:src="@drawable/ic_spotifyimage" />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:text="@string/Millions"
        android:layout_below="@id/iconSpotify"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:text="@string/free_to_spotify"
        android:layout_below="@id/textView1"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btnSignUpFree"
        android:layout_width="match_parent"
        android:layout_below="@id/textView2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Sign up free"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/circle_shape"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnLogin"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_below="@id/btnSignUpFree"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Log in"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/button_image"
        android:layout_height="wrap_content"/>

</RelativeLayout>